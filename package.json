{
  "name": "@noraesae/pen",
  "version": "0.1.5",
  "description": "A better Markdown previewer",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && mocha --require test/setup.js test/**/test-*",
    "lint": "eslint .",
    "build": "NODE_ENV=production browserify src/template/script/main.js -t [ babelify --presets [ es2015 ] ] | uglifyjs > src/template/build.js",
    "release": "npm run build && npm publish --access=public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noraesae/pen.git"
  },
  "keywords": [
    "markdown",
    "previewer"
  ],
  "author": "Hyunje Alex Jun <me@noraesae.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noraesae/pen/issues"
  },
  "homepage": "https://github.com/noraesae/pen#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.3.1",
    "jsdom": "^9.4.2",
    "mocha": "^3.0.2",
    "react-addons-test-utils": "^15.3.1",
    "request": "^2.74.0",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.3"
  },
  "dependencies": {
    "github-markdown-css": "^2.4.0",
    "markdown-it": "^7.0.1",
    "markdown-it-anchor": "^2.5.0",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^1.2.0",
    "opn": "^4.0.2",
    "pug": "^2.0.0-beta5",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-render-html": "0.1.5",
    "websocket": "^1.0.23",
    "yargs": "^5.0.0"
  },
  "preferGlobal": true,
  "bin": {
    "pen": "./bin/pen"
  }
}
