    "jsdom": "^9.4.2",
    "json-loader": "^0.5.7",
    "mocha": "^3.0.2",
    "prettier": "^1.12.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-render-html": "^0.6.0",
    "request": "^2.74.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-fail-plugin": "^2.0.0"
  },
  "dependencies": {
    "highlight.js": "^9.9.0",
    "markdown-it": "^8.2.2",
    "markdown-it-anchor": "^2.5.0",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^1.2.0",
